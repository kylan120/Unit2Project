@model Comic
@{
    string title = ViewBag.Action + " Comic";
    ViewBag.Title = title;
}
<!DOCTYPE html>
<html>
    <head>
        <title>Edit</title>
    </head>
 <body>
     <h2>@ViewBag.Title</h2>

     <form asp-action="Edit" method="post">
         <div asp-validation-summary="All" class="text-danger"></div>

         <div class="form-group">
             <label asp-for="Name">Name</label>
             <input asp-for="Name" class="form-control" />
         </div>

         <div class="form-group">
             <lable asp-for="Company">Company</lable>
             <input asp-for="Company" class="form-control" />
         </div>

         <div class="form-group">
             <label asp-for="IssueNo">Issue Number</label>
             <input asp-for="IssueNo" class="form-control" />
         </div>

         <input type="hidden" asp-for="ComicId" />

         <button type="submit" class="btn btn-primary">@ViewBag.Action</button>
         <a asp-controller="Home" asp-action="Index"
                class="btn btn-primary">Stop</a>
     </form>
 </body>
</html>